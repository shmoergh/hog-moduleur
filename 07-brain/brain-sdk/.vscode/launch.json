{
    "version": "0.2.0",
    "configurations": [
        {   "name": "Pico Debug",
            "device": "RP2040",
            "gdbPath": "arm-none-eabi-gdb",
            "cwd": "${workspaceRoot}",
            // "executable": "${command:cmake.launchTargetPath}",
            // "executable": "${workspaceFolder}/build/programs/hardware-test/hardware-test.elf",
            "executable": "${workspaceFolder}/build/programs/midi2cv/midi2cv.elf",
            "preLaunchTask": "CMake Build",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "configFiles": [
                "/interface/picoprobe.cfg",
                "/target/rp2040.cfg"
            ],
            "svdFile": "${env:PICO_SDK_PATH}/src/rp2040/hardware_regs/rp2040.svd",
            "runToEntryPoint": "main",
            "postRestartCommands": [
                "break main",
                "continue"
            ]
        }
    ]
}
